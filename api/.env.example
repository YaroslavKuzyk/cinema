# ===========================================
# Cinema API - Environment Configuration
# ===========================================

# -------------------------------------------
# PostgreSQL Database
# -------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cinema_identity

# Database connection string (alternative)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/cinema_identity

# -------------------------------------------
# Kafka Message Broker
# -------------------------------------------
KAFKA_BROKER_ID=1
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ZOOKEEPER_CONNECT=localhost:2181

# -------------------------------------------
# Identity Service
# -------------------------------------------
IDENTITY_SERVICE_PORT=8001
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# -------------------------------------------
# API Gateway
# -------------------------------------------
API_GATEWAY_PORT=8000

# -------------------------------------------
# Storage Service
# -------------------------------------------
STORAGE_SERVICE_PORT=8002
STORAGE_PATH=./uploads

# -------------------------------------------
# General
# -------------------------------------------
NODE_ENV=development
