generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  CUSTOMER
  ADMIN
}

enum TokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  REFRESH_TOKEN
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  phoneNumber   String
  firstName     String
  lastName      String
  userType      UserType  @default(CUSTOMER)
  password      String
  avatarUrl     String?
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  profile Profile?
  tokens  UserToken[]
}

model Profile {
  userId      String   @id
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  keyword     String?
  description String?
  state       String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserToken {
  id        String    @id @default(uuid())
  userId    String
  type      TokenType
  token     String    @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())

  deviceInfo String?
  ipAddress  String?
  lastUsed   DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type, expiresAt])
  @@index([token])
}
